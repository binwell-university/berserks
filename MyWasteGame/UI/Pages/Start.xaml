<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
	xmlns:pages="clr-namespace:MyWasteGame.UI.Pages"
	xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWasteGame.UI.Pages.GameIntroPage">
    <ContentPage.Content>
        <StackLayout Padding="25,25,25,25" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
			<Label Text="Выбери уровень" HorizontalOptions="Center" FontSize="Large"/>
			<Button Text="1 Ядовитые" Clicked="Level1_Clicked" VerticalOptions="" HorizontalOptions="Center"/>
			<Button Text="2 Пластик" Clicked="Level2_Clicked" VerticalOptions="" HorizontalOptions="Center"/>
			<Button Text="3 Мокрые" Clicked="Level3_Clicked" VerticalOptions="" HorizontalOptions="Center"/>
			<Button Text="4 Стекло" Clicked="Level4_Clicked" VerticalOptions="" HorizontalOptions="Center"/>
			<Button Text="5 Отходы" Clicked="Level5_Clicked" VerticalOptions="" HorizontalOptions="Center"/>
		</StackLayout>
    </ContentPage.Content>
</pages:BasePage>