<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
	xmlns:pages="clr-namespace:MyWasteGame.UI.Pages"
	xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWasteGame.UI.Pages.StartPage">
    <ContentPage.Content>
        <StackLayout Padding="25,25,25,25" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
			<Label Text="Выбери уровень" HorizontalOptions="Center" FontSize="Large"/>
			<Button Text="1 (Перерабатываемое)" Clicked="Level1_Clicked" HorizontalOptions="Center"/>
			<Button Text="2 (+ неперерабатываемое)" Clicked="Level2_Clicked" HorizontalOptions="Center"/>
			<Button Text="3 (+ пластик)" Clicked="Level3_Clicked" HorizontalOptions="Center"/>
		</StackLayout>
    </ContentPage.Content>
</pages:BasePage>