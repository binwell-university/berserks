<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
	xmlns:pages="clr-namespace:MyWasteGame.UI.Pages"
	xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWasteGame.UI.Pages.StartPage">
    <ContentPage.Content>
        <StackLayout Padding="25,25,25,25" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
			<Label Text="Выбери уровень" HorizontalOptions="Center" FontSize="Large"/>
			<Button Text="Перерабатываемое" Clicked="FirstLevelClicked" HorizontalOptions="Center"/>
			<Button Text="Неперерабатываемое" Clicked="SecondLevelClicked" HorizontalOptions="Center"/>
			<Button Text="Пластик" Clicked="ThirdLevelClicked" HorizontalOptions="Center"/>
		</StackLayout>
    </ContentPage.Content>
</pages:BasePage>