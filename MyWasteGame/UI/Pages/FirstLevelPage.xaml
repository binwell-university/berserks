<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
	xmlns:pages="clr-namespace:MyWasteGame.UI.Pages"
	xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWasteGame.UI.Pages.FirstLevelPage">
    <ContentPage.Content>
		<StackLayout Padding="25,25,25,50">
			<Label FontSize ="Large"
				Text="Первое испытание"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
				TextColor="AliceBlue"/>
			
			<Label Text="Выбери перерабатываемые продукты "
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
				FontSize="Large"/>

			<ImageButton 
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
				WidthRequest="150"
				HeightRequest="150"
				Source="i3ILUy734Gc.jpg"
				Clicked="OnFirstImageButtonClicked"/>

			<ImageButton 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
				WidthRequest="150"
				HeightRequest="150"
				Source="c62G2jT3Y68.jpg"
				Clicked="OnSecondImageButtonClicked"/>
			
			<ImageButton 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
				WidthRequest="150"
				HeightRequest="150"
				Source="BPxDtVnKqCc.jpg"
				Clicked="OnThirdImageButtonClicked"/>
		</StackLayout>
	</ContentPage.Content>
</pages:BasePage>