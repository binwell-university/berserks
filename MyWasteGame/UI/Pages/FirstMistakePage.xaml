<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
	xmlns:pages="clr-namespace:MyWasteGame.UI.Pages"
	xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWasteGame.UI.Pages.FirstMistakePage">
    <ContentPage.Content>
        <StackLayout Padding="25,25,25,50">
            <Label Text="Упс! Ты ошибся. Попробуй снова"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
				FontSize="Large"/>
			<Button Text="Вернуться к игре" Clicked="MistakeStepBackClicked"/>
		</StackLayout>
    </ContentPage.Content>
</pages:BasePage>