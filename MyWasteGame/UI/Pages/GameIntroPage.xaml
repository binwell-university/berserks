<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
	xmlns:pages="clr-namespace:MyWasteGame.UI.Pages"
	xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWasteGame.UI.Pages.GameIntroPage">
    <ContentPage.Content>
		<StackLayout Padding="25,25,25,50">
			<Label FontSize="Large" Text="Привет, дорогой друг! Меня зовут Мистер Бин. Я рад, что ты прибыл так скоро. Надеюсь, ты поможешь мне спасти планету "
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
			<Image HeightRequest="200" WidthRequest="200" Source="mrBin.png"/>
			<Button Text="Далее" Clicked="GoToStartClicked"/>
		</StackLayout>
	</ContentPage.Content>
</pages:BasePage>